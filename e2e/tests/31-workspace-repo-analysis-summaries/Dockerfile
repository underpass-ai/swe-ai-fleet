FROM docker.io/library/python:3.13-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY e2e/tests/31-workspace-repo-analysis-summaries/test_workspace_repo_analysis_summaries.py /app/test_workspace_repo_analysis_summaries.py

RUN groupadd -r testuser && useradd -r -m -g testuser -u 1000 testuser && \
    chown -R testuser:testuser /app

USER testuser

CMD ["python", "/app/test_workspace_repo_analysis_summaries.py"]
