---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { Epic } from '../../lib/types';

let epics: Epic[] = [];
let error: string | null = null;
const projectId = Astro.url.searchParams.get('project_id') || '';

try {
  const path = projectId ? `/api/epics?project_id=${projectId}` : '/api/epics';
  const apiUrl = new URL(path, Astro.url.origin);
  const response = await fetch(apiUrl.toString());
  if (response.ok) {
    const data = await response.json();
    epics = data.epics || [];
  } else {
    error = `Failed to load epics: ${response.statusText}`;
  }
} catch (e) {
  error = `Error loading epics: ${e instanceof Error ? e.message : 'Unknown error'}`;
}
---

<BaseLayout title="Epics">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">Epics</h2>
        <p class="mt-1 text-sm text-gray-600">
          Organize stories into epics
        </p>
      </div>
      <a
        href={projectId ? `/epics/new?project_id=${projectId}` : '/epics/new'}
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700"
      >
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Epic
      </a>
    </div>

    {error ? (
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Error loading epics</h3>
            <div class="mt-2 text-sm text-red-700">
              <p>{error}</p>
            </div>
          </div>
        </div>
      </div>
    ) : epics.length === 0 ? (
      <div class="bg-white shadow rounded-lg p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No epics</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new epic.</p>
        <div class="mt-6">
          <a
            href={projectId ? `/epics/new?project_id=${projectId}` : '/epics/new'}
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
          >
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Epic
          </a>
        </div>
      </div>
    ) : (
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {epics.map((epic) => (
          <a
            href={`/epics/${epic.epic_id}`}
            class="bg-white shadow rounded-lg p-6 hover:shadow-md transition-shadow"
          >
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900">{epic.title}</h3>
                <p class="mt-1 text-sm text-gray-500 line-clamp-2">{epic.description || 'No description'}</p>
              </div>
              <span class={`ml-4 px-2 py-1 text-xs font-medium rounded-full ${
                epic.status === 'active' ? 'bg-green-100 text-green-800' :
                epic.status === 'planning' ? 'bg-blue-100 text-blue-800' :
                epic.status === 'in_progress' ? 'bg-yellow-100 text-yellow-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {epic.status}
              </span>
            </div>
            <div class="mt-4 text-sm text-gray-500">
              Created: {new Date(epic.created_at).toLocaleDateString()}
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>


