---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { Story } from '../../lib/types';

// Fetch available stories (only READY_FOR_REVIEW or similar states)
let stories: Story[] = [];
let error: string | null = null;

try {
  const apiUrl = new URL('/api/stories', Astro.url.origin);
  const response = await fetch(apiUrl.toString());
  if (response.ok) {
    const data = await response.json();
    // Filter stories that are ready for backlog review
    stories = (data.stories || []).filter((s: Story) =>
      ['BACKLOG', 'DRAFT', 'PO_REVIEW'].includes(s.state || '')
    );
  } else {
    error = `Failed to load stories: ${response.statusText}`;
  }
} catch (e) {
  error = `Error loading stories: ${e instanceof Error ? e.message : 'Unknown error'}`;
}
---

<BaseLayout title="New Backlog Review Ceremony">
  <div class="max-w-3xl mx-auto space-y-6">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Create Backlog Review Ceremony</h2>
      <p class="mt-1 text-sm text-gray-600">
        Select stories to review with multi-council feedback (ARCHITECT, QA, DEVOPS)
      </p>
    </div>

    {error && (
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Error loading stories</h3>
            <div class="mt-2 text-sm text-red-700">
              <p>{error}</p>
            </div>
          </div>
        </div>
      </div>
    )}

    <form id="ceremony-form" class="space-y-6 bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div>
        <label for="created_by" class="block text-sm font-medium text-gray-700">
          Created By (PO Email)
        </label>
        <input
          type="email"
          name="created_by"
          id="created_by"
          required
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
          placeholder="product.owner@example.com"
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Select Stories to Review
        </label>
        <div class="border border-gray-300 rounded-md p-4 max-h-96 overflow-y-auto">
          {stories.length === 0 ? (
            <p class="text-sm text-gray-500 text-center py-8">
              No stories available for review.
            </p>
          ) : (
            <div class="space-y-2">
              {stories.map((story) => (
                <label class="flex items-start p-3 hover:bg-gray-50 rounded-md cursor-pointer">
                  <input
                    type="checkbox"
                    name="story_ids"
                    value={story.story_id}
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mt-1"
                  />
                  <div class="ml-3 flex-1">
                    <p class="text-sm font-medium text-gray-900">{story.title}</p>
                    <p class="text-xs text-gray-500">{story.story_id} â€¢ {story.state}</p>
                    {story.description && (
                      <p class="mt-1 text-sm text-gray-600 line-clamp-2">{story.description}</p>
                    )}
                  </div>
                </label>
              ))}
            </div>
          )}
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Select stories that are ready for technical review by councils.
        </p>
      </div>

      <div class="flex justify-end space-x-3">
        <a
          href="/ceremonies"
          class="px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="inline-flex justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Create Ceremony
        </button>
      </div>
    </form>
  </div>
</BaseLayout>

<script>
  document.getElementById('ceremony-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    const created_by = formData.get('created_by') as string;
    const story_ids = formData.getAll('story_ids') as string[];

    if (story_ids.length === 0) {
      alert('Please select at least one story');
      return;
    }

    try {
      const response = await fetch('/api/ceremonies', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ created_by, story_ids }),
      });

      if (response.ok) {
        const data = await response.json();
        window.location.href = `/ceremonies/${data.ceremony_id}`;
      } else {
        const error = await response.text();
        alert(`Failed to create ceremony: ${error}`);
      }
    } catch (err) {
      alert(`Error: ${err instanceof Error ? err.message : 'Unknown error'}`);
    }
  });
</script>

