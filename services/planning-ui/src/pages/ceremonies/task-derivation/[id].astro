---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import TaskCard from '../../../components/TaskCard.astro';
import type { Story } from '../../../lib/types';
import type { Task } from '../../../lib/types';

const { id } = Astro.params;

// Fetch ceremony from API
let ceremony: any = null;
let error: string | null = null;
let stories: Story[] = [];
let storiesError: string | null = null;
let storyTasks: Record<string, Task[]> = {};
let tasksError: string | null = null;

try {
  const apiUrl = new URL(`/api/ceremonies/task-derivation/${id}`, Astro.url.origin);
  const response = await fetch(apiUrl.toString());
  if (response.ok) {
    const data = await response.json();
    ceremony = data.ceremony;

    // Fetch story details for each story_id
    if (ceremony?.story_ids && ceremony.story_ids.length > 0) {
      const storyPromises = ceremony.story_ids.map(async (storyId: string) => {
        try {
          const storyApiUrl = new URL(`/api/stories/${storyId}`, Astro.url.origin);
          const storyResponse = await fetch(storyApiUrl.toString());
          if (storyResponse.ok) {
            const storyData = await storyResponse.json();
            return storyData.story;
          }
          return null;
        } catch (e) {
          console.error(`Failed to fetch story ${storyId}:`, e);
          return null;
        }
      });

      const fetchedStories = await Promise.all(storyPromises);
      stories = fetchedStories.filter((story): story is Story => story !== null);

      if (stories.length < ceremony.story_ids.length) {
        storiesError = `Some stories could not be loaded (${stories.length}/${ceremony.story_ids.length} loaded)`;
      }

      // Fetch tasks for each story
      const taskPromises = stories.map(async (story) => {
        try {
          const tasksApiUrl = new URL(`/api/tasks?story_id=${story.story_id}`, Astro.url.origin);
          const tasksResponse = await fetch(tasksApiUrl.toString());
          if (tasksResponse.ok) {
            const tasksData = await tasksResponse.json();
            return { story_id: story.story_id, tasks: tasksData.tasks || [] };
          }
          return { story_id: story.story_id, tasks: [] };
        } catch (e) {
          console.error(`Failed to fetch tasks for story ${story.story_id}:`, e);
          return { story_id: story.story_id, tasks: [] };
        }
      });

      const fetchedTasks = await Promise.all(taskPromises);
      fetchedTasks.forEach(({ story_id, tasks }) => {
        storyTasks[story_id] = tasks;
      });
    }
  } else {
    error = `Failed to load ceremony: ${response.statusText}`;
  }
} catch (e) {
  error = `Error loading ceremony: ${e instanceof Error ? e.message : 'Unknown error'}`;
}

const getStatusColor = (status: string) => {
  switch (status) {
    case 'DRAFT': return 'bg-gray-100 text-gray-800';
    case 'IN_PROGRESS': return 'bg-blue-100 text-blue-800 animate-pulse';
    case 'DERIVING': return 'bg-yellow-100 text-yellow-800';
    case 'COMPLETED': return 'bg-green-100 text-green-800';
    case 'CANCELLED': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};

const getDerivationStatus = (storyId: string) => {
  if (!ceremony?.derivation_status) return 'PENDING';
  return ceremony.derivation_status[storyId] || 'PENDING';
};

const getDerivationStatusColor = (status: string) => {
  switch (status) {
    case 'PENDING': return 'bg-gray-100 text-gray-800';
    case 'IN_PROGRESS': return 'bg-blue-100 text-blue-800';
    case 'COMPLETED': return 'bg-green-100 text-green-800';
    case 'FAILED': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};
---

<BaseLayout title={`Task Derivation Ceremony ${id}`}>
  {error ? (
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <p class="text-red-800">{error}</p>
      <a href="/ceremonies" class="text-red-600 hover:text-red-800 underline mt-2 inline-block">
        ← Back to ceremonies
      </a>
    </div>
  ) : !ceremony ? (
    <p>Loading...</p>
  ) : (
    <div class="space-y-6">
      {/* Ceremony Header */}
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Task Derivation Ceremony
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
              ID: {ceremony.ceremony_id}
            </p>
          </div>
          <span class={`px-3 py-1 text-sm font-semibold rounded-full ${getStatusColor(ceremony.status)}`}>
            {ceremony.status}
          </span>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Created By</dt>
              <dd class="mt-1 text-sm text-gray-900">{ceremony.created_by}</dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {new Date(ceremony.created_at).toLocaleString()}
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Stories</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {ceremony.story_ids?.length || 0} selected
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Derived Tasks</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {Object.values(storyTasks).reduce((sum, tasks) => sum + tasks.length, 0)} total
              </dd>
            </div>
          </dl>
        </div>
      </div>

      {/* Stories Section with Derivation Controls */}
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Stories for Task Derivation
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            {ceremony.story_ids?.length || 0} {ceremony.story_ids?.length === 1 ? 'story' : 'stories'} selected. Start deliberation for each story individually.
          </p>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          {storiesError && (
            <div class="mb-4 bg-yellow-50 border border-yellow-200 rounded-md p-3">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800">{storiesError}</p>
                </div>
              </div>
            </div>
          )}
          {stories.length === 0 ? (
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">
                No stories available.
              </p>
            </div>
          ) : (
            <div class="space-y-6">
              {stories.map((story) => {
                const derivationStatus = getDerivationStatus(story.story_id);
                const tasks = storyTasks[story.story_id] || [];
                const canStart = derivationStatus === 'PENDING' || derivationStatus === 'FAILED';
                const isInProgress = derivationStatus === 'IN_PROGRESS';
                const isCompleted = derivationStatus === 'COMPLETED';

                return (
                  <div class="border border-gray-200 rounded-lg p-4 space-y-4">
                    {/* Story Header with Derivation Status */}
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <div class="bg-white rounded-lg p-4">
                          <div class="flex items-start justify-between">
                            <div class="flex-1">
                              <h4 class="text-lg font-semibold text-gray-900">{story.title}</h4>
                              <p class="mt-1 text-sm text-gray-500 line-clamp-2">{story.brief || 'No description'}</p>
                            </div>
                            <span class={`ml-4 px-2 py-1 text-xs font-medium rounded-full ${
                              story.state === 'BACKLOG' ? 'bg-gray-100 text-gray-800' :
                              story.state === 'DRAFT' ? 'bg-blue-100 text-blue-800' :
                              story.state === 'DESIGN' ? 'bg-purple-100 text-purple-800' :
                              story.state === 'BUILD' ? 'bg-yellow-100 text-yellow-800' :
                              story.state === 'TEST' ? 'bg-orange-100 text-orange-800' :
                              story.state === 'DOCS' ? 'bg-indigo-100 text-indigo-800' :
                              story.state === 'DONE' ? 'bg-green-100 text-green-800' :
                              'bg-gray-100 text-gray-800'
                            }`}>
                              {story.state}
                            </span>
                          </div>
                          <div class="mt-3 flex items-center space-x-4 text-sm text-gray-500">
                            <span>ID: {story.story_id}</span>
                            <span>DoR: <span class={`font-semibold ${
                              story.dor_score >= 80 ? 'text-green-600' :
                              story.dor_score >= 60 ? 'text-yellow-600' : 'text-red-600'
                            }`}>{story.dor_score}/100</span></span>
                            <a href={`/stories/${story.story_id}`} class="text-blue-600 hover:text-blue-800">
                              View Story →
                            </a>
                          </div>
                        </div>
                      </div>
                      <div class="ml-4 flex flex-col items-end space-y-2">
                        <span class={`px-2 py-1 text-xs font-semibold rounded-full ${getDerivationStatusColor(derivationStatus)}`}>
                          {derivationStatus}
                        </span>
                        {canStart && (
                          <button
                            class="start-derivation-btn inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700"
                            data-ceremony-id={ceremony.ceremony_id}
                            data-story-id={story.story_id}
                          >
                            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Start Derivation
                          </button>
                        )}
                        {isInProgress && (
                          <div class="flex items-center text-sm text-blue-600">
                            <svg class="animate-spin h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24">
                              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Deriving...
                          </div>
                        )}
                      </div>
                    </div>

                    {/* Derived Tasks for this Story */}
                    {isCompleted && tasks.length > 0 && (
                      <div class="mt-4 pt-4 border-t border-gray-200">
                        <h4 class="text-sm font-medium text-gray-900 mb-3">
                          Derived Tasks ({tasks.length})
                        </h4>
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                          {tasks.map((task) => (
                            <TaskCard task={task} />
                          ))}
                        </div>
                      </div>
                    )}
                    {isCompleted && tasks.length === 0 && (
                      <div class="mt-4 pt-4 border-t border-gray-200 text-center py-4">
                        <p class="text-sm text-gray-500">No tasks derived yet.</p>
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          )}
        </div>
      </div>
    </div>
  )}
</BaseLayout>

<script>
  // Start derivation for a story
  document.querySelectorAll('.start-derivation-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const target = e.currentTarget as HTMLButtonElement;
      const ceremony_id = target.dataset.ceremonyId;
      const story_id = target.dataset.storyId;
      const started_by = prompt('Enter your email (PO):');

      if (!started_by) return;

      target.disabled = true;
      target.innerHTML = '<span class="animate-spin mr-2">⏳</span> Starting...';

      try {
        const response = await fetch(`/api/ceremonies/task-derivation/${ceremony_id}/start-derivation`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ story_id, started_by }),
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const error = await response.text();
          alert(`Failed to start derivation: ${error}`);
          target.disabled = false;
          target.innerHTML = 'Start Derivation';
        }
      } catch (err) {
        alert(`Error: ${err instanceof Error ? err.message : 'Unknown error'}`);
        target.disabled = false;
        target.innerHTML = 'Start Derivation';
      }
    });
  });

  // Auto-refresh when derivations are in progress (poll every 5s)
  const ceremony = document.querySelector('[data-status]') as HTMLElement;
  if (ceremony?.dataset?.status === 'IN_PROGRESS' || ceremony?.dataset?.status === 'DERIVING') {
    setInterval(() => {
      window.location.reload();
    }, 5000);
  }
</script>







