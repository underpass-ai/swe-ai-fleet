---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NodeContextViewer from '../../components/NodeContextViewer.astro';
import type { Task } from '../../lib/types';

const { id } = Astro.params;

let task: Task | null = null;
let error: string | null = null;

if (id) {
  try {
    const apiUrl = new URL(`/api/tasks/${id}`, Astro.url.origin);
    const response = await fetch(apiUrl.toString());
    if (response.ok) {
      const data = await response.json();
      task = data.task;
    } else {
      error = `Failed to load task: ${response.statusText}`;
    }
  } catch (e) {
    error = `Error loading task: ${e instanceof Error ? e.message : 'Unknown error'}`;
  }
}

const statusColors: Record<string, string> = {
  todo: 'bg-gray-100 text-gray-800',
  in_progress: 'bg-yellow-100 text-yellow-800',
  in_review: 'bg-blue-100 text-blue-800',
  blocked: 'bg-red-100 text-red-800',
  completed: 'bg-green-100 text-green-800',
  cancelled: 'bg-gray-100 text-gray-600',
};
---

<BaseLayout title={task?.title || 'Task'}>
  {error ? (
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Error</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>{error}</p>
          </div>
        </div>
      </div>
    </div>
  ) : task ? (
    <div class="space-y-6">
      <NodeContextViewer taskId={task.task_id} currentType="task" />

      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <h2 class="text-2xl font-bold text-gray-900">{task.title}</h2>
            <p class="mt-2 text-sm text-gray-600">{task.description || 'No description'}</p>
          </div>
          <span class={`ml-4 px-3 py-1 text-sm font-medium rounded-full ${statusColors[task.status] || 'bg-gray-100 text-gray-800'}`}>
            {task.status}
          </span>
        </div>
        <div class="mt-4 grid grid-cols-2 gap-4 text-sm">
          <div>
            <span class="text-gray-500">Type:</span>
            <span class="ml-2 font-medium text-gray-900">{task.type || 'N/A'}</span>
          </div>
          <div>
            <span class="text-gray-500">Assigned to:</span>
            <span class="ml-2 font-medium text-gray-900">{task.assigned_to || 'Unassigned'}</span>
          </div>
          <div>
            <span class="text-gray-500">Estimated hours:</span>
            <span class="ml-2 font-medium text-gray-900">{task.estimated_hours || 0}h</span>
          </div>
          <div>
            <span class="text-gray-500">Priority:</span>
            <span class="ml-2 font-medium text-gray-900">{task.priority || 'N/A'}</span>
          </div>
          <div>
            <span class="text-gray-500">Created:</span>
            <span class="ml-2 font-medium text-gray-900">{new Date(task.created_at).toLocaleDateString()}</span>
          </div>
          <div>
            <span class="text-gray-500">Updated:</span>
            <span class="ml-2 font-medium text-gray-900">{new Date(task.updated_at).toLocaleDateString()}</span>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-200 flex items-center space-x-4">
          {task.story_id && (
            <a
              href={`/stories/${task.story_id}`}
              class="inline-flex items-center text-sm text-blue-600 hover:text-blue-700"
            >
              <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              View parent story
            </a>
          )}
          {task.plan_id && (
            <a
              href={`/tasks?plan_id=${task.plan_id}`}
              class="inline-flex items-center text-sm text-green-600 hover:text-green-700"
            >
              <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
              View plan tasks
              <span class="ml-1 font-mono text-xs">({task.plan_id})</span>
            </a>
          )}
        </div>
      </div>
    </div>
  ) : (
    <div class="text-center py-12">
      <p class="text-gray-500">Loading task...</p>
    </div>
  )}
</BaseLayout>

