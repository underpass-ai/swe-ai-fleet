{
  "metadata": {"name": "redis"},
  "image": {"image": "docker.io/library/redis:7-alpine"},
  "command": ["redis-server"],
  "args": [
    "--appendonly","no",
    "--save","",
    "--requirepass","${REDIS_PASSWORD:-swefleet-dev}",
    "--bind","0.0.0.0",
    "--protected-mode","no",
    "--maxmemory-policy","allkeys-lru"
  ],
  "log_path": "redis.log",
  "linux": {"security_context": {"privileged": false}}
}

